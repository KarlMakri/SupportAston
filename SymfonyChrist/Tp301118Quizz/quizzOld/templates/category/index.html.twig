{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-6">
                <h1>Catégories</h1><br>


            </div>
            <div class="col-6">
                <a href="{{ path('category_add') }}" class="btn btn-primary">Ajouter une Catégorie</a>
            </div>
        </div>

        <br><br>

        <table class="table table-striped table-bordered">

            {% for category in categories %}

                <tr>
                    <td>{{ category.name }}</td>
                    <td><a href="{{ path('category_edit', {'id' : category.id}) }}" class="btn btn-warning">Modifier</a></td>
                    <td><a href="{{ path('category_delete', {'id' : category.id}) }}" class="btn btn-danger">Supprimer</a></td>
                </tr>

            {% endfor %}

        </table>

    </div>

{% endblock %}

